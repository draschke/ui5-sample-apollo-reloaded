<mvc:View
	controllerName="sap.ui.demo.apollo.controller.App"
	displayBlock="true"
	xmlns="sap.ui.webc.main"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:html="http://www.w3.org/1999/xhtml">

	<Title class="title" text="Todo Application"/>

	<html:div class="searchbar">
		<Input id="newTodo" placeholder="My Todo..." value="{todos>/newTodo}"/>
		<Button text="Add Todo" design="Emphasized" click=".addTodo" icon="add"/>
	</html:div>

	<html:div class="content"> 
		<List items="{/todos}" itemClick=".listClick">
			<CustomListItem class="todoItems">
				<CheckBox selected="{selected}" change=".completeTodo"/>
				<Label text="{title}"/>
				<Button icon="edit" click=".editTodo"/>
				<Button icon="delete" design="Negative" click=".deleteTodo"/>
			</CustomListItem>
		</List>
	</html:div>

	<Dialog id="editTodo" headerText="Edit todo item">
		<content>
			<Input class="dialogTodoInput" value="{edit>/title}"/>
		</content>
		<footer>
			<Button class="dialogCloseButton" design="Emphasized" text="Close" click=".closeEdit"/>
		</footer>
	</Dialog>

</mvc:View>
